{
   "manifest_version": 3,
   "name": "Jeep Weather Forecast",
   "name": "Jeep Weather",
   "version": "0.4.0.0",

   "description": "This extension shows the if there is dry weather ahead for Jeeping with the top down and the current temperature.",

   "action":
   { 
      "default_icon": "unknown-16.png", 
      "default_popup": "popup.html" 
   }, 

   "icons":{
      "128": "open-128.png",
      "48": "open-48.png",
      "32": "open-32.png",
      "16": "open-16.png"
   },

   "background":
   {
      "service_worker": "lookup.js"
   },

   "permissions": 
   [ 
      "alarms",
      "contextMenus",
      "geolocation",
      "idle",
      "offscreen",
      "storage"
   ],

   "options_ui": {
     "page": "options.html",
     "open_in_tab": false
   },

   "host_permissions": [
      "https://jeepweather.bump.us/"
   ]
}

