{
   "manifest_version": 2,
   "name": "Jeep Weather Forecast",
   "version": "0.0.0.2",

   "description": "This extension shows the if there is dry weather ahead for Jeeping with the top down.",

   "browser_action": 
   { 
      "default_icon": "closed.png", 
      "default_popup": "popup.html" 
   }, 

   "background":
   {
      "scripts": ["lookup.js"],
      "persistent": false
   },

   "permissions": 
   [ 
      "geolocation", 
      "storage", 
      "alarms",
      "https://jeepweather.bump.us/" 
   ] 
}

